@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section cStyleLibrary{}

@section cStyleCode{
    <link rel="stylesheet" type="text/css" href="~/Content/css/pages/search.css" />
}

@section cHeaderBreadcrumbs{
    <!-- Breadcrumbs -->
    <div class="ex-basic-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumbs">
                        <a href="@Url.RouteUrl("Home")">Hal Fiyatları</a><i class="fa fa-angle-double-right"></i><span>@ViewBag.Title</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Privacy Content -->
<div class="ex-basic-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 -offset-lg-1">
                <div class="text-container">
                    <h3>Filtreler</h3>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="iCases">Hal Seçiniz</label>
                                <select id="iCases" class="form-control">
                                    @*<option>Hal Seçiniz</option>*@
                                    <option>Antalya</option>
                                    <option>Ankara</option>
                                    <option>İstanbul</option>
                                    <option>Bursa</option>
                                    <option>İzmir</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="iFruits">Meyve Seçiniz</label>
                                <select id="iFruits" class="form-control">
                                    @*<option>Meyve Seçiniz</option>*@
                                    <option>Elma</option>
                                    <option>Armut</option>
                                    <option>Muz</option>
                                    <option>Portakal</option>
                                    <option>Mandalina</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="iStartDate">Başlangıç Tarihi</label>
                                <input id="iStartDate" placeholder="Başlangıç Tarihi" type="text" data-toggle="datetimepicker" data-target="#iStartDate" class="form-control datetimepicker-input" />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="iFinishDate">Bitiş Tarihi</label>
                                <input id="iFinishDate" placeholder="Bitiş Tarihi" type="text" data-toggle="datetimepicker" data-target="#iFinishDate" class="form-control datetimepicker-input" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @*<label for="iSearch">Gelişmiş Arama</label>*@
                                <input id="iSearch" placeholder="Gelişmiş Arama" type="text" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <button id="btnSearch" type="button" class="btn btn-primary btn-block">Ara</button>
                        </div>
                    </div>
                </div>

                <div class="text-container">
                    <h3>Arama Sonuçları</h3>

                    <table class="table table-dark table-borderless table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Hal</th>
                                <th>Mevye</th>
                                <th>Fiyat</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Antalya</td>
                                <td>Elma</td>
                                <td>₺ 10 TL</td>
                            </tr>
                            <tr>
                                <td>Ankara</td>
                                <td>Armut</td>
                                <td>20 TL</td>
                            </tr>
                            <tr>
                                <td>İstanbul</td>
                                <td>Muz</td>
                                <td>₺ 12 TL</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <a href="/" class="btn-outline-reg back">Geri Dön</a>
            </div>
        </div>
    </div>
</div>

@section cFooterBreadcrumbs{
    <!-- Breadcrumbs -->
    <div class="ex-basic-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumbs">
                        <a href="@Url.RouteUrl("Home")">Hal Fiyatları</a><i class="fa fa-angle-double-right"></i><span>@ViewBag.Title</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section cScriptLibrary{
    @*@Scripts.Render("~/bundles/Search")*@
}

@section cScriptCode{
    <script type="text/javascript" src="~/Content/js/pages/search.js"></script>
}